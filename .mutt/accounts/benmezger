# IMAP
set my_name = "Ben Mezger"
set imap_user = mezger.benjamin@gmail.com
set imap_pass = `gpg2 --quiet --batch -d ~/.pwds/benmezger_gmail.gpg`
set folder = imaps://mezger.benjamin@imap.gmail.com/

set spoolfile = +INBOX
mailboxes +INBOX

set postponed = +[Gmail]/Drafts
set trash = +[Gmail]/Trash

# SMTP
set smtp_url = smtps://mezger.benjamin@smtp.gmail.com/
set smtp_pass = $imap_pass
set folder = imaps://$imap_user@imap.gmail.com/
set from = $imap_user
set realname = $my_name
set envelope_from = yes

set hostname = gmail.com

unset record

set header_cache = ~/.cache/mutt-personal

set query_command="goobook -c ~/.mutt/accounts/goobook-benmezger query '%s'"
macro index,pager a "<pipe-message>goobook -c ~/.mutt/accounts/goobook-benmezger add<return>" "add sender to google contacts"
